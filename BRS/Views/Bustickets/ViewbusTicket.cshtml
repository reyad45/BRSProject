            //Click Seat and Add Value

            var theTotal = 0;
            var SarviceChage = 0;
            var count = 0;

            $('.seats .available').click(function() {
                if ($(this).hasClass('selected')) {
                    console.log('clicked');
                    $(this).removeClass('selected');

                    count = Number(count) - 1;
                    document.getElementById("clickme").textContent = count;
                    theTotal = Number(theTotal) - 480;
                    SarviceChage = number(SarviceChage) - 30;

                    if (count == 0) {
                        document.getElementById("subTotal").textContent = 0;
                        document.getElementById("Stotal").textContent = 0;
                        document.getElementById("myspan").textContent = 0;
                    } else {
                        document.getElementById("subTotal").textContent = theTotal;
                        document.getElementById("Stotal").textContent = SarviceChage;
                        document.getElementById("myspan").textContent = theTotal + SarviceChage;
                    }

                } else {
                    theTotal = Number(theTotal) + 480;
                    SarviceChage = Number(SarviceChage) + 30;

                    if (count < 4) {
                        $(this).addClass('selected');
                        count = Number(count) + 1;
                        $('#tussenstand').val("Total:" + theTotal);
                        document.getElementById("subTotal").textContent = theTotal;
                        document.getElementById("Stotal").textContent = SarviceChage;
                        document.getElementById("myspan").textContent = theTotal + SarviceChage;

                        document.getElementById("clickme").textContent = count;
                    } else {
                        window.alert("Maximum Seat limit is 4 per Booking");
                    }
                }


            });
